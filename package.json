  "module": "dist/wgpu-img-tools.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --ui --open --coverage",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.html --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "knip": "knip",
    "dev": "pnpm exec vite --config vite.config.lib.ts --host",
    "build": "pnpm exec vite build --config vite.config.lib.ts",
    "dev:demo": "pnpm exec vite --config vite.config.demo.ts --host"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.7",
    "lodash.debounce": "^4.0.8",
    "playwright": "^1.52.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "3.1.3",
    "@vitest/ui": "^3.1.3",
    "@webgpu/types": "^0.1.43",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
