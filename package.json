    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "happy-dom": "^17.4.7",
    "knip": "^5.56.0",
    "svelte": "^5.33.0",
    "svelte-preprocess": "^6.0.3",
    "typegpu": "^0.5.7",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.1.3"
  }
